                    option Select a country
                    option United States
                .form-group
                  label.section-checkout-form-label Address
                  input.form-control.form-control-md type="text"
                .form-group
                  input.form-control.form-control-md type="text"

                .row
                  .col-4
                    .form-group
                      label.section-checkout-form-label City
